{
  "name": "sample-app-runner",
  "version": "1.0.0",
  "description": "CDK sample app demonstrating WireMock OpenAI API integration with LocalStack",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "cdklocal": "cdklocal",
    "deploy": "npm run build && cdklocal deploy --require-approval never",
    "destroy": "cdklocal destroy --force",
    "test": "jest --runInBand"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "aws-cdk": "^2.170.0",
    "aws-cdk-local": "^2.19.0",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.700.0",
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.3.0"
  }
}
